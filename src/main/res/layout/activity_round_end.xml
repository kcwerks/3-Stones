<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#994a1d"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="edu.ramapo.kcalabro.a3stones.View.EndRoundActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Stones"
        android:fontFamily="cursive"
        android:id="@+id/title_screen1"
        android:textColor="#000000"
        android:textSize="120sp"/>

    <TextView
        android:id="@+id/tournamentScoreLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Tournament Score Limit: "
        android:fontFamily="casual"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@drawable/black_background"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/blackStonesRoundScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="Round Score - Black Stones: "
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/blackStonesTournScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="Tournament Score - Black Stones: "
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/whiteStonesRoundScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="Round Score - White Stones: "
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/whiteStonesTournScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="Tournament Score - White Stones: "
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:fontFamily="casual"
            android:text="Round Winner: "
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="  Next Round  "
            android:textSize="60sp"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/newRoundButton" />
    </LinearLayout>

</LinearLayout>